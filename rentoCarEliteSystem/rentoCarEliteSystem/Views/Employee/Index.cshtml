<h1 id="titlePannel" class="text-md-center">Empleados</h1>


<p id="infoPannel" class="text-md-center"></p>




<div class="card p-3 mb-3 bg-light">
    <div class="d-flex align-items-center gap-2 justify-content-between">
        <div class="input-group w-50 d-none"
            <span class="input-group-text"><i class="fas fa-search"></i></span>
            <input type="text" id="searchInput" class="form-control" placeholder="Buscar...">
        </div>
        <button class="btn btn-success" id="downloadCsv">
            <i class="fas fa-file-csv"></i> Descargar .CSV
        </button>
        <button type="button" class="btn btn-primary" id="addNewCustomerEmployee">
            <i class="fas fa-user-plus"></i> Nuevo Empleado
        </button>
    </div>
</div>


<!--Table rendering element-->

<div id="tableContainer"></div>

<!--Creation user Modal-->

<div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel"><i class="fas fa-user-edit"></i> Formulario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="userForm">
                    <div class="mb-3">
                        <label for="firstName" class="form-label"><i class="fas fa-id-badge"></i> Nombre</label>
                        <input type="text" class="form-control" id="firstName" name="firstName" required placeholder="Ingrese su nombre">
                    </div>
                    <div class="mb-3">
                        <label for="lastName" class="form-label"><i class="fas fa-id-card"></i> Apellido</label>
                        <input type="text" class="form-control" id="lastName" name="lastName" required placeholder="Ingrese su apellido">
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label"><i class="fas fa-phone"></i> Teléfono</label>
                        <input type="tel" class="form-control" id="phone" name="phone" required placeholder="Ingrese su número de teléfono">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label"><i class="fas fa-envelope"></i> Email</label>
                        <input type="email" class="form-control" id="email" name="email" required placeholder="Ingrese su correo electrónico">
                    </div>
                    <div class="mb-3">
                        <label for="jobTitle" class="form-label"><i class="fas fa-briefcase"></i> Puesto</label>
                        <input type="text" class="form-control" id="jobTitle" name="jobTitle" required placeholder="Ingrese su puesto de trabajo">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label"><i class="fas fa-lock"></i> Contraseña</label>
                        <input type="password" class="form-control" id="password" name="password" required minlength="6" placeholder="Ingrese su contraseña">
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label"><i class="fas fa-lock"></i> Confirmar Contraseña</label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required minlength="6" placeholder="Confirme su contraseña">
                        <div id="passwordHelp" class="form-text text-danger"></div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="closeFormModalButton">
                    <i class="fas fa-times-circle"></i> Cerrar
                </button>
                <button id="addEmployeeButton" type="button" class="btn btn-primary">
                    <i class="fas fa-save"></i> Guardar
                </button>
                <button id="saveEmployeeButton" class="btn btn-success" form="userForm">
                    <i class="fas fa-edit"></i> Editar
                </button>
            </div>
        </div>
    </div>
</div>



<!--Confirm Deletion Modal-->


<div class="modal fade" id="deleteUserModal" tabindex="-1" aria-labelledby="deleteUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteUserModalLabel">
                    <i class="fas fa-exclamation-triangle text-warning"></i> Confirmar eliminación
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body" id="confirmationDeletrUserLabel">
                <p><i class="fas fa-question-circle text-danger"></i> ¿Estás seguro que deseas eliminar a este usuario?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-ban"></i> Cancelar
                </button>
                <button id="deletCustomerButton" type="button" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> OK
                </button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/common.js"></script>
<script src="~/js/employee.service.js"></script>
