
@{
    ViewData["Title"] = "newSell";
}

<h1 class="text-md-center">Nueva Venta</h1>
<div class="container mt-5">
    <div id="stepper" class="bs-stepper">
        <div class="bs-stepper-header">
            <div class="step" data-target="#step-1">
                <button class="step-trigger">
                    <span class="bs-stepper-circle"><i class="fa-solid fa-car"></i></span>
                    <span class="bs-stepper-label">Vehículo</span>
                </button>
            </div>
            <div class="line"></div>
            <div class="step" data-target="#step-2">
                <button class="step-trigger">
                    <span class="bs-stepper-circle"><i class="fa-solid fa-user"></i></span>
                    <span class="bs-stepper-label">Cliente</span>
                </button>
            </div>
            <div class="line"></div>
            <div class="step" data-target="#step-3">
                <button class="step-trigger">
                    <span class="bs-stepper-circle"><i class="fa-solid fa-calendar-alt"></i></span>
                    <span class="bs-stepper-label">Agenda</span>
                </button>
            </div>
            <div class="line"></div>
            <div class="step" data-target="#step-4">

                <button class="step-trigger">
                    <span class="bs-stepper-circle"><i class="fa-solid fa-shield"></i></span>
                    <span class="bs-stepper-label">Seguro</span>
                </button>
            </div>
            <div class="line"></div>
            <div class="step" data-target="#step-5">
                <button class="step-trigger">
                    <span class="bs-stepper-circle"><i class="fa-solid fa-credit-card"></i></span>
                    <span class="bs-stepper-label">Pago</span>




                </button>
            </div>
        </div>
        <div class="container mt-4">
            <div class="bs-stepper-content">
                <!-- Paso 1 -->
                <div id="step-1" class="content active">
                    <h5 class="mb-3">Información del Vehículo</h5>
                    <div class="mb-3">
                        <select id="select-items" class="form-select"></select>
                    </div>

                    <div class="container mt-5">
                        <div class="card shadow-lg">
                            <div class="card-header bg-primary text-white text-center">
                                <h5><i class="fas fa-car"></i> Informacion del vehiculo</h5>
                            </div>
                            <div class="card-body">

                                <div class="mb-3">
                                    <label for="brand" class="form-label"><i class="fas fa-car"></i> Marca</label>
                                    <input type="text" id="brand" class="form-control" readonly disabled>
                                </div>
                                <div class="mb-3">
                                    <label for="model" class="form-label"><i class="fas fa-car"></i> Modelo</label>
                                    <input type="text" id="model" class="form-control" readonly disabled>
                                </div>
                                <div class="mb-3">
                                    <label for="price" class="form-label"><i class="fas fa-dollar-sign"></i> Precio por dia</label>
                                    <input type="text" id="price" class="form-control" readonly disabled>
                                </div>
                                <!--anio-->
                                <div class="mb-3">
                                    <label for="year" class="form-label"><i class="fas fa-calendar-alt"></i> Año</label>
                                    <input type="text" id="year" class="form-control" readonly disabled>
                                </div>

                                <div class="mb-3 d-none">
                                    <img id="image" class="img-fluid" alt="Imagen del vehículo"/>
                                </div>
                            </div>
                        </div>
                    </div>






                    <div class="d-flex justify-content-end">
                        <button class="btn btn-primary" id="vechileNextSelection">Siguiente</button>
                    </div>
                </div>

                <!-- Paso 2 -->
                <div id="step-2" class="content">
                    <h5 class="mb-3">Datos del Cliente</h5>
                    <div class="mb-3">
                        <select id="select-customer" class="form-select"></select>
                    </div>

                    
                    <!--fields for nombre,apellido,#calendar telefono Efectivo emial-->

                    <div class="container mt-5">
                            <div class="card shadow-lg">
                                <div class="card-header bg-primary text-white text-center">
                                    <h5><i class="fas fa-user"></i> Datos Personales</h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label for="name" class="form-label"><i class="fas fa-id-badge"></i> Nombre</label>
                                        <input type="text" id="name" class="form-control" required disabled>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="lastName" class="form-label"><i class="fas fa-user-tag"></i> Apellido</label>
                                        <input type="text" id="lastName" class="form-control" readonly disabled>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="phone" class="form-label"><i class="fas fa-phone"></i> Teléfono</label>
                                        <input type="tel" id="phone" class="form-control" readonly disabled>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="email" class="form-label"><i class="fas fa-envelope"></i> Email</label>
                                        <input type="email" id="email" class="form-control" readonly disabled>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <div class="d-flex justify-content-between">
                        <button class="btn btn-secondary" onclick="stepper.previous()">Anterior</button>
                        <button class="btn btn-primary" id="customerNext">Siguiente</button>
                    </div>
                </div>
            </div>
            <!-- Paso 3 -->
            <div id="step-3" class="content">

                <h2 style="text-align: center;">Selecciona una fecha disponible</h2>
                <div id="calendar"></div>

                <button class="btn btn-secondary" onclick="stepper.previous()">Anterior</button>
                <button class="btn btn-primary" id="calendarNext">Siguiente</button>
            </div>
            <!-- Paso 4 -->
            <div id="step-4" class="content">


                <div class="mb-3">

                    <div class="container mt-5">
                        <h2><i class="fas fa-shield-alt"></i> Seleccione un Seguro</h2>
                        <div class="mb-3">
                            <label for="secureType" class="form-label">Tipo de Seguro</label>
                            <select id="secureType" class="form-select">
                                <option value="" disabled selected>Seleccione un tipo</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Descripción</label>
                            <textarea id="description" class="form-control" rows="3" readonly></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="amount" class="form-label">Costo</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                                <input type="text" id="amount" class="form-control" readonly>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="btn btn-secondary" onclick="stepper.previous()">Anterior</button>
                <button class="btn btn-primary" id="nextInsuranceButton">Siguiente</button>
            </div>
            <!-- Paso 5 -->
            <div id="step-5" class="content">
                <div class="mb-3">
                    <label for="totalAmount" class="form-label">Costo</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                        <input type="text" id="totalAmount" class="form-control" readonly>
                    </div>
                </div>
                

                <label for="paymentMethod" class="form-label">
                    <i class="fas fa-credit-card"></i> Método de Pago
                </label>
                <select class="form-select" id="paymentMethod">
                    <option value="cash">
                        <i class="fas fa-money-bill-wave"></i> Efectivo
                    </option>
                    <option value="debit_card">
                        <i class="fas fa-credit-card"></i> Tarjeta de débito
                    </option>
                    <option value="credit_card">
                        <i class="fas fa-university"></i> Tarjeta de crédito
                    </option>
                </select>
                <button class="btn btn-secondary" onclick="stepper.previous()">Anterior</button>
                <button class="btn btn-success" id="nextStepPayment">Finalizar</button>
            </div>
        </div>
    </div>
</div>
<style>

    #calendar {
        max-width: 700px;
        margin: auto;
    }
</style>

<script src="~/js/newSell.js"></script>
<script src="~/js/common.js"></script>
<script src="~/js/vehicles.service.js"></script>
<script src="~/js/customer.service.js"></script>
<script src="~/js/newSell.service.js"></script>


